<odoo>
    <record id="view_erp_security_tree" model="ir.ui.view">
        <field name="name">erp.security.tree</field>
        <field name="model">erp.security</field>
        <field name="arch" type="xml">
            <tree>
                <field name="salis_session_id" />
                <field name="salis_user_id" />
                <field name="national_id" />
                <field name="employee_id" />
                <field name="active" />
                <field name="created_at" />
                <field name="last_used" />
                <field name="expiry_after" />
            </tree>
        </field>
    </record>

    <record id="view_erp_security_form" model="ir.ui.view">
        <field name="name">erp.security.form</field>
        <field name="model">erp.security</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="salis_session_id" />
                        <field name="salis_user_id" />
                        <field name="national_id" />
                        <field name="employee_id" />
                        <field name="jwt_token" />
                        <field name="active" />
                        <field name="created_at" />
                        <field name="last_used" />
                        <field name="expiry_after" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_erp_security_search" model="ir.ui.view">
        <field name="name">erp.security.search</field>
        <field name="model">erp.security</field>
        <field name="arch" type="xml">
            <search>
                <field name="salis_session_id" />
                <field name="salis_user_id" />
                <field name="national_id" />
                <field name="employee_id" />
                <field name="active" />
                <field name="created_at" />
                <field name="expiry_after" />
            </search>
        </field>
    </record>
</odoo>