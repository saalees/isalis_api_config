<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Webhook Notification Type Tree View -->
        <record id="view_webhook_notification_type_tree" model="ir.ui.view">
            <field name="name">webhook.notification_type.tree</field>
            <field name="model">webhook.notification_type</field>
            <field name="arch" type="xml">
                <tree string="Webhook Notification Types">
                    <field name="name" />
                    <field name="event_type" />
                    <field name="description" />
                </tree>
            </field>
        </record>

        <!-- Webhook Notification Type Form View -->
        <record id="view_webhook_notification_type_form" model="ir.ui.view">
            <field name="name">webhook.notification_type.form</field>
            <field name="model">webhook.notification_type</field>
            <field name="arch" type="xml">
                <form string="Webhook Notification Type">
                    <sheet>
                        <group>
                            <field name="name" />
                            <field name="event_type" />
                            <field name="description" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Webhook Notification Tree View -->
        <record id="view_webhook_notification_tree" model="ir.ui.view">
            <field name="name">webhook.notification.tree</field>
            <field name="model">webhook.notification</field>
            <field name="arch" type="xml">
                <tree string="Webhook Notifications" create="false">
                    <field name="name" />
                    <field name="notification_type" optional="hide" />
                    <field name="model_name" optional="hide" />
                    <field name="record_id" optional="hide" />
                    <field name="status" widget="badge" decoration-info="status == 'pending'"
                        decoration-warning="status == 'retry'"
                        decoration-danger="status == 'failed'" decoration-success="status == 'sent'" />
                    <field name="retry_count" />
                    <field name="sent_date" />
                    <field name="create_date" optional="hide" />
                </tree>
            </field>
        </record>

        <!-- Webhook Notification Form View -->
        <record id="view_webhook_notification_form" model="ir.ui.view">
            <field name="name">webhook.notification.form</field>
            <field name="model">webhook.notification</field>
            <field name="arch" type="xml">
                <form string="Webhook Notification">
                    <header>
                        <button name="action_send_webhook" type="object" string="Send Webhook"
                            class="oe_highlight" states="pending,retry" />
                        <button name="action_retry" type="object" string="Retry"
                            class="oe_highlight" states="failed,retry"
                            attrs="{'invisible': ['|', ('retry_count', '=', 'max_retries'), ('status', 'not in', ['failed', 'retry'])]}" />
                        <field name="status" widget="statusbar"
                            statusbar_visible="pending,sent,failed" />
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name" />
                                <field name="notification_type" readonly="1" />
                                <field name="model_name" readonly="1" />
                                <field name="record_id" readonly="1" />
                            </group>
                            <group>
                                <field name="webhook_url" readonly="1" />
                                <field name="retry_count" readonly="1" />
                                <field name="max_retries" />
                                <field name="company_id" groups="base.group_multi_company" />
                            </group>
                        </group>
                        <group>
                            <field name="payload" readonly="1" />
                            <field name="headers" readonly="1" />
                        </group>
                        <group>
                            <field name="error_message" readonly="1"
                                attrs="{'invisible': [('error_message', '=', False)]}" />
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Webhook Notification Search View -->
        <record id="view_webhook_notification_search" model="ir.ui.view">
            <field name="name">webhook.notification.search</field>
            <field name="model">webhook.notification</field>
            <field name="arch" type="xml">
                <search string="Webhook Notifications">
                    <field name="name" />
                    <field name="notification_type" />
                    <field name="model_name" />
                    <field name="webhook_url" />
                    <filter string="Pending" name="pending" domain="[('status', '=', 'pending')]" />
                    <filter string="Sent" name="sent" domain="[('status', '=', 'sent')]" />
                    <filter string="Failed" name="failed" domain="[('status', '=', 'failed')]" />
                    <filter string="Retry" name="retry" domain="[('status', '=', 'retry')]" />
                    <group expand="0" string="Group By">
                        <filter string="Status" name="group_by_status"
                            context="{'group_by': 'status'}" />
                        <filter string="Notification Type" name="group_by_type"
                            context="{'group_by': 'notification_type'}" />
                        <filter string="Model" name="group_by_model"
                            context="{'group_by': 'model_name'}" />
                        <filter string="Company" name="group_by_company"
                            context="{'group_by': 'company_id'}" groups="base.group_multi_company" />
                    </group>
                </search>
            </field>
        </record>

    </data>
</odoo> 